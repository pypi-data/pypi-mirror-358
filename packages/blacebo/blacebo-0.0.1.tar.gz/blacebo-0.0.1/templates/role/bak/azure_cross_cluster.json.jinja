{
    "description": "access azure logs and metrics via read_cross_cluster from remote",

    "elasticsearch": {
        "indices": [
            {
                "names": [
                    "logs-azure-{{ identifier }}",
                    "metrics-azure-{{ identifier }}"
                ],
                "privileges": [
                    "read",
                    "read_cross_cluster",
                    "view_index_metadata"
                ],
                "query": "{\"terms\": {\"azure.subscription_id\": [ {% for subscription_id in subscription_ids %}\"{{ subscription_id }}\"{% if not loop.last %},{% endif %}{% endfor %} ]}}"
            }

        ]
    }
}
