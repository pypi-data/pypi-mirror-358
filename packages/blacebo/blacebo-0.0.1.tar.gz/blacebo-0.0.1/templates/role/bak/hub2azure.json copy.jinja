{
    "description": "access azure logs and metrics via read_cross_cluster from remote",

    "elasticsearch": {
        "indices": [
            {
                "names": [
                    "logs-azure-{{ identifier }}",
                    "metrics-azure-{{ identifier }}"
                ],
                "privileges": [
                    "read",
                    "read_cross_cluster"
                ],
                "query": "{\"terms\": {\"azure.subscription_id\": [\"{{ subscription_id }}\"]}}"
            }
        ]
    }
}
