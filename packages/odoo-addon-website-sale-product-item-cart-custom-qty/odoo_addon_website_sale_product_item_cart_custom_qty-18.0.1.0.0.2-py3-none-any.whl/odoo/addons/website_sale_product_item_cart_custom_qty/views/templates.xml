<?xml version='1.0' encoding='utf-8' ?>
<odoo>
    <template id="products_add_to_cart" inherit_id="website_sale.products_add_to_cart">
        <!-- Add quantity selector -->
        <xpath expr="//span[hasclass('fa-shopping-cart')]/.." position="before">
            <div class="css_quantity input-group mb-1 d-inline-flex">
                <a
                    class="btn btn-light js_add_cart_json d-md-inline-block"
                    aria-label="Remove one"
                    title="Remove one"
                >
                    <i class="fa fa-minus" />
                </a>
                <input
                    type="text"
                    class="js_quantity form-control quantity"
                    data-min="1"
                    name="add_qty"
                    t-att-value="add_qty or 1"
                />
                <a
                    class="btn btn-light js_add_cart_json d-md-inline-block"
                    aria-label="Add one"
                    title="Add one"
                >
                    <i class="fa fa-plus" />
                </a>
            </div>
        </xpath>
    </template>

    <template
        id="always_display_qty_buttons"
        inherit_id="website_sale.products_item"
        name="Always display qty buttons"
        customize_show="True"
        priority="100"
        active="False"
    >
        <xpath expr="//div[hasclass('o_wsale_product_btn')]" position="attributes">
            <attribute name="class" add="o_wsale_product_btn_custom" separator=" " />
        </xpath>
    </template>

    <template id="products_item" inherit_id="website_sale.products_item">
        <xpath expr="//div[hasclass('o_wsale_product_btn')]" position="attributes">
            <attribute name="class" separator=" " remove="d-flex gap-2" />
        </xpath>
    </template>
</odoo>
