<div style="{{ styles.container }}">
  <div style="{{ styles.headerSuccess }}">Success!</div>
  {% if deployTimeWords %}
    <div style="{{ styles.base }}">
      {{ deployKind }} <span style="{{ styles.code }}">{{ deployName }}</span>
      will be ready in {{ deployTimeWords }}
    </div>
  {% else %}
    {% if deployMessage %}
      <div style="{{ styles.base }}">{{ deployMessage }}</div>
    {% endif %}
  {% endif %}

  <a href="{{ runtimeOverviewUrl }}" target="_blank" style="display: inline-block; margin-top: 12px;" >
    <div
      style="display: inline-block; background-color: #845B99; border-radius: 0.375rem; color: white; cursor: pointer; font-size: 14px; font-weight: 700; padding: 8px 16px;"
      onmouseenter="this.style.background='#714488'"
      onmouseleave="this.style.background='#845B99'"
    >
      View in Modelbit
    </div>
  </a>
</div>
