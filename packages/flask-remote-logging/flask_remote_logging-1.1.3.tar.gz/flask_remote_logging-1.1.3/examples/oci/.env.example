# Oracle Cloud Infrastructure (OCI) Logging Flask Example Environment Variables
# Copy this file to .env and adjust the values for your setup

# OCI Configuration
OCI_CONFIG_FILE=~/.oci/config
OCI_CONFIG_PROFILE=DEFAULT

# OCI Logging Configuration
OCI_LOG_GROUP_ID=ocid1.loggroup.oc1.iad.your-log-group-id
OCI_LOG_ID=ocid1.log.oc1.iad.your-log-id
OCI_COMPARTMENT_ID=ocid1.compartment.oc1..your-compartment-id
OCI_LOG_SOURCE_NAME=flask-oci-example
OCI_LOG_LEVEL=INFO
OCI_ENVIRONMENT=development

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true
PORT=5000

# Optional: Custom user simulation with OCI context
# These headers can be used to simulate different OCI users in requests
# Example: curl -H "X-User-ID: alice123" -H "X-OCI-User-OCID: ocid1.user.oc1..alice" http://localhost:5000/logs/user-context
