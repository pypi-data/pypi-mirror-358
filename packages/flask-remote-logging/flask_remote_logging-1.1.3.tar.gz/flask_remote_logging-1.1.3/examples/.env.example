# Environment variables for Flask Graylog Example

# Flask Configuration
FLASK_HOST=127.0.0.1
FLASK_PORT=5000
FLASK_DEBUG=true
FLASK_ENV=development

# Graylog Configuration
GRAYLOG_HOST=localhost
GRAYLOG_PORT=12201
GRAYLOG_LEVEL=INFO
# Unified environment key (recommended for v2.0+)
FLASK_REMOTE_LOGGING_ENVIRONMENT=development
# Legacy environment key (deprecated but still supported)
# GRAYLOG_ENVIRONMENT=development
GRAYLOG_FACILITY=flask-example

# Optional Configuration
DATACENTER=local
