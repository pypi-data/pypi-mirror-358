{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: gcc.exe build active file",
			"command": "gcc",
			"args": [
				"-fdiagnostics-color=always",
				"-g3",
				"-Wall",
				"-std=c99",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"-lm",
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: gcc"
		}
	]
}