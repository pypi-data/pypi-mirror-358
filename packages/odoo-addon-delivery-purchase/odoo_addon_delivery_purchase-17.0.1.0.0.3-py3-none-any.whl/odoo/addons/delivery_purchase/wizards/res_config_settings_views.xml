<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field
            name="inherit_id"
            ref="purchase.res_config_settings_view_form_purchase"
        />
        <field name="arch" type="xml">
            <xpath expr="//block[@name='matrix_setting_container']" position="after">
                <block title="Shipping" name="shipping_setting_container">
                    <setting
                        id="recompute_delivery_cost"
                        help="Recompute shipping costs when validating the picking with the quantity received."
                    >
                        <field name="recompute_delivery_price_on_picking" />
                    </setting>
                    <setting
                        id="no_create_delivery_line"
                        help="Avoid delivery line creation on purchase order when validating the picking."
                    >
                        <field name="no_create_delivery_line_on_po" />
                    </setting>
                </block>
            </xpath>
        </field>
    </record>

</odoo>
