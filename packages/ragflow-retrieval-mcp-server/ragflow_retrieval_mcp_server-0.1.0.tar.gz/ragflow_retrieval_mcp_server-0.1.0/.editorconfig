root = true

[*]
charset = utf-8
end_of_line = lf
max_line_length = 120
insert_final_newline = true
trim_trailing_whitespace = true

[*.xml]
indent_style = tab
indent_size = 4

[*.yml]
indent_style = tab
indent_size = 2

[*.java]
indent_style = tab
indent_size = 4

[*.{js,ts}]
indent_style = tab
indent_size = 4

[*.py]
indent_style = space
indent_size = 4
