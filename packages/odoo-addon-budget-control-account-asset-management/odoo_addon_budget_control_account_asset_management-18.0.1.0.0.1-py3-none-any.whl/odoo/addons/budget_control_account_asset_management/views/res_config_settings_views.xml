<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form_budget" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.budget</field>
        <field name="model">res.config.settings</field>
        <field
            name="inherit_id"
            ref="budget_control.res_config_settings_view_form_budget"
        />
        <field name="arch" type="xml">
            <xpath
                expr="//block[@name='budget_control_options_container']"
                position="inside"
            >
                <setting
                    id="asset_not_affect_budget"
                    help="Required analytic account for documents that have a committed budget, such as PR, PO, AV, EX, and Actual."
                >
                    <field name="asset_not_affect_budget" />
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
