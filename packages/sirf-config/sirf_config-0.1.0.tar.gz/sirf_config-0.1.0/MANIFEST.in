# Include documentation
include README.md
include LICENSE
include MANIFEST.in

# Include configuration files
recursive-include src/sirf_config/default_configs *.yaml

# Include examples
recursive-include examples *.py *.md

# Include docs
recursive-include docs *.md *.rst *.py

# Include tests
recursive-include tests *.py *.yaml

# Exclude development files
exclude .gitignore
exclude .github/*
exclude .pytest_cache/*
exclude *.pyc
exclude __pycache__/*
global-exclude *.pyc
global-exclude __pycache__/*