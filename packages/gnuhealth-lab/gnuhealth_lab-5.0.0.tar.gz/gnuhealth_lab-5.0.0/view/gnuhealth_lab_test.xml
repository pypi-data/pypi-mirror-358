<form>
    <notebook>
        <page string="Main Info" id="test_type_main_info">
            <group id="labtest_header" col="6" colspan="4">
                <label name="name"/>
                <field name="name"/>
                <label name="code"/>
                <field name="code"/>
                <label name="specimen_type"/>
                <field name="specimen_type"/>
                <label name="category"/>
                <field name="category"/>
                <label name="gender"/>
                <field name="gender"/>
                <label string="Age range:" id="age_range_label"/>
                <group id="age_range" col="2" colspan="1">
                  <field name="min_age"/>
                  <field name="max_age"/>
                </group>
                <label name="report_style"/>
                <field name="report_style"/>
                <label name="tags"/>
                <field name="tags" colspan="3"/>
                <label name="active"/>
                <field name="active"/>
            </group>
            <newline/>
            <field name="critearea" colspan="4" view_ids="health_lab.test_critearea_view_tree_test_type,health_lab.test_critearea_view_form_test_type"/>
            <label name="product_id"/>
            <field name="product_id"/>
        </page>
        <page string="Extra Info" id="test_type_extra_info">
            <label name="info"/>
            <field name="info"/>
        </page>
    </notebook>
</form>
