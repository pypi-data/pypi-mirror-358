<odoo>
    <record id="sale_order_warehouse_location_view_warehouse" model="ir.ui.view">
        <field name="name">sale.order.warehouse.location.view.warehouse</field>
        <field name="model">stock.warehouse</field>
        <field name="inherit_id" ref="stock.view_warehouse" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']/../.." position="after">
                <group string="Sale Order Warehouse">
                    <field
                        name="sale_country_ids"
                        widget="many2many_tags"
                        options="{'no_create': True}"
                    />
                    <field
                        name="sale_state_ids"
                        widget="many2many_tags"
                        options="{'no_create': True}"
                    />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
