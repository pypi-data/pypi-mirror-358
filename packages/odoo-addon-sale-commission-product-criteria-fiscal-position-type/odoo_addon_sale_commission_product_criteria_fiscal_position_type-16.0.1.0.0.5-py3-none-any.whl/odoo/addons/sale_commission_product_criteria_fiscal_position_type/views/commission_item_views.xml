<odoo>

    <record id="sale_commission_form_lines_mod_fiscal_position" model="ir.ui.view">
        <field name="name">commission.form.view.inherit.fiscal.position</field>
        <field name="model">commission</field>
        <field name="priority">18</field>
        <field
            name="inherit_id"
            ref="sale_commission_product_criteria.sale_commission_form_lines_mod"
        />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='item_ids']/tree//field[@name='name']"
                position="after"
            >
                <field name="fiscal_position_type" optional="show" />
            </xpath>
        </field>
    </record>

    <record id="commission_item_tree_view_fiscal_position" model="ir.ui.view">
        <field name="name">commission.item.tree.fiscal.position</field>
        <field name="model">commission.item</field>
        <field name="priority">18</field>
        <field
            name="inherit_id"
            ref="sale_commission_product_criteria.commission_item_tree_view"
        />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="fiscal_position_type" optional="show" />
            </field>
        </field>
    </record>

    <record id="commission_item_form_view_fiscal_position" model="ir.ui.view">
        <field name="name">commission.item.form.fiscal.position</field>
        <field name="model">commission.item</field>
        <field name="priority">18</field>
        <field
            name="inherit_id"
            ref="sale_commission_product_criteria.commission_item_form_view"
        />
        <field name="arch" type="xml">
            <field name="applied_on" position="after">
                <field name="fiscal_position_type" />
            </field>
        </field>
    </record>

</odoo>
