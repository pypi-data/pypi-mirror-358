ika floor_result = pansi(test_float)
ika ceil_result = pamwamba(test_float)
onetsa("pansi(4.7):", floor_result)
onetsa("pamwamba(4.7):", ceil_result)

# Rounding (kuzungulira)
ika round_result = kuzungulira(4.567, 2)
onetsa("kuzungulira(4.567, 2):", round_result)

# Max and min (chachikulu, chachingono)
