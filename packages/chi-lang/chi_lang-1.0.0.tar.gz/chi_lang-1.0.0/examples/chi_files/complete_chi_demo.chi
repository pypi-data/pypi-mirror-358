# Chi Programming Language - Complete Feature Demonstration
# This file showcases all current capabilities of the Chi language

onetsa("============================================")
onetsa("    Chi Programming Language Demo")
onetsa("    Featuring All Current Capabilities")
onetsa("============================================")
onetsa("")

# ===== DATA TYPES DEMONSTRATION =====
onetsa("=== DATA TYPES ===")

# Strings (mawu)
ika greeting = "Moni, dziko!"
ika converted_string = mawu(42)
onetsa("String:", greeting, "| Type:", mtundu(greeting))
onetsa("Converted string:", converted_string, "| Type:", mtundu(converted_string))

# Numbers (manambala & manambala_olekeza)
ika decimal = 42.75
ika whole_number = manambala_olekeza(42.9)
onetsa("Float:", decimal, "| Type:", mtundu(decimal))
onetsa("Integer:", whole_number, "| Type:", mtundu(whole_number))

# Booleans (yankho)
ika truth = zoona
ika falsehood = zabodza
onetsa("True value:", truth, "| Type:", mtundu(truth))
onetsa("False value:", falsehood, "| Type:", mtundu(falsehood))

# Null values (palibe)
ika empty_value = palibe
onetsa("Null value:", empty_value, "| Type:", mtundu(empty_value))

# Lists (ndandanda)
ika mixed_list = ndandanda(1, "text", zoona, palibe, 42.5)
onetsa("List:", mixed_list, "| Type:", mtundu(mixed_list))
onetsa("List length:", kukula(mixed_list))
onetsa("")

# ===== OPERATORS DEMONSTRATION =====
onetsa("=== OPERATORS ===")

# Arithmetic
ika a = 15
ika b = 4
onetsa("Arithmetic with", a, "and", b, ":")
onetsa("  Addition:", a + b)
onetsa("  Subtraction:", a - b)
onetsa("  Multiplication:", a * b)
onetsa("  Division:", a / b)

# Comparison (Chichewa operators)
onetsa("Comparisons:")
onetsa("  wapambana (>):", a wapambana b, "| Type:", mtundu(a wapambana b))
onetsa("  wachepa (<):", a wachepa b)
onetsa("  wafanana (==):", a wafanana b)
onetsa("  wasiyana (!=):", a wasiyana b)
onetsa("  wafananitsa (>=):", a wafananitsa b)
onetsa("  wachepetsedwa (<=):", a wachepetsedwa b)

# Logical operators
onetsa("Logical operations:")
onetsa("  zoona komanso zabodza:", zoona komanso zabodza)
onetsa("  zoona kapena zabodza:", zoona kapena zabodza)
onetsa("  osati zoona:", osati zoona)
onetsa("")

# ===== CONTROL STRUCTURES =====
onetsa("=== CONTROL STRUCTURES ===")

# If-elif-else
ika age = 22
onetsa("Age classification for age", age, ":")
ngati age wachepa 13:
    onetsa("  Category: Child")
kapena_ngati age wachepa 20:
    onetsa("  Category: Teenager")
sizoona:
    onetsa("  Category: Adult")

# While loop
onetsa("Counting with while loop:")
ika counter = 1
yesani counter wafananitsa 3:
    onetsa("  Count:", counter)
    ika counter = counter + 1

# For loop with different data types
ika sample_data = ndandanda("apple", 42, zoona, palibe, "banana")
onetsa("Iterating through mixed data:")
bwereza item mu sample_data:
    onetsa("  Item:", item, "| Type:", mtundu(item))
onetsa("")

# ===== LIST OPERATIONS =====
onetsa("=== LIST OPERATIONS ===")

ika fruits = ndandanda("apple", "banana", "cherry")
onetsa("Original fruits:", fruits)

# Add items
fruits.onjezera("orange")
onetsa("After onjezera (append):", fruits)

# Insert item
fruits.lowetsa(1, "mango")
onetsa("After lowetsa (insert) at position 1:", fruits)

# Count and find
ika apple_count = fruits.werengera("apple")
ika banana_position = fruits.funafuna("banana")
onetsa("Count of 'apple':", apple_count)
onetsa("Position of 'banana':", banana_position)

# Remove item
fruits.chotsa("cherry")
onetsa("After chotsa (remove) 'cherry':", fruits)

# Pop item
ika removed = fruits.tulutsa(0)
onetsa("Removed item:", removed)
onetsa("Final fruits list:", fruits)
onetsa("")

# ===== NULL HANDLING =====
onetsa("=== NULL HANDLING ===")

ika user_data = palibe
ika default_name = "Anonymous User"

onetsa("Testing null handling:")
ngati user_data == palibe:
    ika final_name = default_name
    onetsa("  User data is null, using default:", final_name)
sizoona:
    ika final_name = user_data
    onetsa("  Using user data:", final_name)

# Null in calculations
ika scores = ndandanda(85, palibe, 92, 78, palibe, 95)
ika total_score = 0
ika valid_scores = 0

onetsa("Processing scores with null values:")
bwereza score mu scores:
    ngati score == palibe:
        onetsa("  Found null score, skipping...")
    sizoona:
        ika total_score = total_score + score
        ika valid_scores = valid_scores + 1
        onetsa("  Valid score:", score)

ika average = total_score / valid_scores
onetsa("  Total:", total_score, "| Count:", valid_scores, "| Average:", average)
onetsa("")

