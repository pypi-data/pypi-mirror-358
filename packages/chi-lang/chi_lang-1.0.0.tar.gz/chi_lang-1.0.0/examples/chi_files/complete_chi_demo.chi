onetsa("  As string:", as_string, "(", mtundu(as_string), ")")
onetsa("  Back to float:", back_to_float, "(", mtundu(back_to_float), ")")
onetsa("  As integer:", as_int, "(", mtundu(as_int), ")")
onetsa("")

# ===== PRACTICAL EXAMPLE =====
onetsa("=== PRACTICAL EXAMPLE ===")
onetsa("Student Grade Management System:")

ika students = ndandanda("Alice", "Bob", "Charlie", "Diana")
ika grades = ndandanda(85, 92, palibe, 78)

bwereza i mu ndandanda(0, 1, 2, 3):
    ika student = students[i]
    ika grade = grades[i]
    
    onetsa("Student:", student)
    ngati grade == palibe:
        onetsa("  Grade: Not available")
        onetsa("  Status: Incomplete")
    sizoona:
        ngati grade wafananitsa 80:
            onetsa("  Grade:", grade, "- Excellent!")
        kapena_ngati grade wafananitsa 70:
            onetsa("  Grade:", grade, "- Good")
        sizoona:
            onetsa("  Grade:", grade, "- Needs improvement")

