# ===== 4. LENGTH/SIZE (kukula) =====
onetsa("=== 4. LENGTH/SIZE (kukula) ===")
ika greeting = "Moni, dziko!"
ika colors = ndandanda("red", "green", "blue", "yellow")
ika empty_list = ndandanda()

onetsa("String length:", kukula(greeting))
onetsa("List length:", kukula(colors))
