onetsa("=== MATHEMATICAL FUNCTIONS (Chichewa Names) ===")
onetsa("")

onetsa("1. mphamvu(base, exponent) - Power Function")
onetsa("   Example: mphamvu(3, 4) =", mphamvu(3, 4))
onetsa("   Meaning: 'strength/power' in Chichewa")
onetsa("")

onetsa("2. chotsalira(dividend, divisor) - Modulo Function")
onetsa("   Example: chotsalira(23, 7) =", chotsalira(23, 7))
onetsa("   Meaning: 'remainder' in Chichewa")
onetsa("")

onetsa("3. muzu(number) - Square Root Function")
onetsa("   Example: muzu(36) =", muzu(36))
onetsa("   Meaning: 'root' in Chichewa")
onetsa("")

onetsa("4. chopanda(number) - Absolute Value Function")
onetsa("   Example: chopanda(-15) =", chopanda(-15))
onetsa("   Meaning: 'without sign' in Chichewa")
onetsa("")

onetsa("5. pansi(number) - Floor Function")
onetsa("   Example: pansi(4.8) =", pansi(4.8))
onetsa("   Meaning: 'down/below' in Chichewa")
onetsa("")

onetsa("6. pamwamba(number) - Ceiling Function")
onetsa("   Example: pamwamba(4.2) =", pamwamba(4.2))
onetsa("   Meaning: 'up/above' in Chichewa")
onetsa("")

onetsa("7. zungulira(number, digits) - Round Function")
onetsa("   Example: zungulira(3.14159, 2) =", zungulira(3.14159, 2))
onetsa("   Meaning: 'to go around' in Chichewa")
onetsa("")

onetsa("8. phatikiza(...args) - Sum Function")
onetsa("   Example: phatikiza(1, 2, 3, 4, 5) =", phatikiza(1, 2, 3, 4, 5))
onetsa("   Meaning: 'to add together' in Chichewa")
onetsa("")

onetsa("9. pakatikati(...args) - Average Function")
onetsa("   Example: pakatikati(10, 20, 30, 40) =", pakatikati(10, 20, 30, 40))
onetsa("   Meaning: 'in the middle' in Chichewa")
onetsa("")

onetsa("10. chachikulu(...args) - Maximum Function")
onetsa("   Example: chachikulu(5, 12, 8, 15, 3) =", chachikulu(5, 12, 8, 15, 3))
onetsa("   Meaning: 'the biggest' in Chichewa")
onetsa("")

onetsa("11. chachingono(...args) - Minimum Function")
onetsa("   Example: chachingono(5, 12, 8, 15, 3) =", chachingono(5, 12, 8, 15, 3))
onetsa("   Meaning: 'the smallest' in Chichewa")
onetsa("")

onetsa("=== OPERATOR PRECEDENCE (Highest to Lowest) ===")
onetsa("1. Parentheses: ( )")
onetsa("2. Power: **")
onetsa("3. Multiplication, Division, Modulo: *, /, %")
onetsa("4. Addition, Subtraction: +, -")
onetsa("")
onetsa("Examples:")
onetsa("2 + 3 * 4 =", 2 + 3 * 4, "(multiplication first)")
