onetsa("=== COMMON USE CASES ===")
onetsa("")
onetsa("Area of circle: π * r²")
ika radius = 5
ika pi = 3.14159
ika area = pi * mphamvu(radius, 2)
onetsa("Example: radius=5, area =", area)
onetsa("")

onetsa("Pythagorean theorem: c = √(a² + b²)")
ika a = 3
ika b = 4
ika c = muzu(mphamvu(a, 2) + mphamvu(b, 2))
onetsa("Example: a=3, b=4, c =", c)
onetsa("")

onetsa("Check if number is even:")
ika number = 42
ika remainder = chotsalira(number, 2)
ngati remainder == 0:
    onetsa(number, "is even")
sizoona:
    onetsa(number, "is odd")
onetsa("")

