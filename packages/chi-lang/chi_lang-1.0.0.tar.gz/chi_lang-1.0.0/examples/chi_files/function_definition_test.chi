# ===== Test 10: Recursive Function =====
onetsa("=== Test 10: Recursive Function ===")

panga factorial(n):
    ngati n wafananitsa 1:
        bweza 1
    sizoona:
        bweza n * factorial(n - 1)

onetsa("Factorial of 5:", factorial(5))
onetsa("Factorial of 3:", factorial(3))
