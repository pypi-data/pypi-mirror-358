# ===== Test 6: Function with Conditionals =====
onetsa("=== Test 6: Function with Logic ===")

panga check_grade(score):
    ngati score wafananitsa 90:
        bweza "Excellent"
    kapena_ngati score wafananitsa 80:
        bweza "Good"
    kapena_ngati score wafananitsa 70:
        bweza "Average"
    sizoona:
        bweza "Needs Improvement"

onetsa("Grade for 95:", check_grade(95))
onetsa("Grade for 85:", check_grade(85))
onetsa("Grade for 75:", check_grade(75))
onetsa("Grade for 65:", check_grade(65))
onetsa("")

# ===== Test 7: Function Using Other Functions =====
onetsa("=== Test 7: Functions Calling Functions ===")

panga square(n):
    bweza mphamvu(n, 2)

panga hypotenuse(a, b):
    ika a_squared = square(a)
    ika b_squared = square(b)
    bweza muzu(a_squared + b_squared)

ika result = hypotenuse(3, 4)
onetsa("Hypotenuse of 3,4 triangle:", result)
onetsa("")

# ===== Test 8: Statistical Function =====
onetsa("=== Test 8: Statistical Function ===")

panga analyze_data(data_list):
    ika total = phatikiza(*data_list)
    ika average = pakatikati(*data_list)
    ika maximum = chachikulu(*data_list)
    ika minimum = chachingono(*data_list)
    
    onetsa("Data Analysis:")
    onetsa("  Total:", total)
    onetsa("  Average:", zungulira(average, 1))
    onetsa("  Maximum:", maximum)
    onetsa("  Minimum:", minimum)
    
    bweza average

ika test_data = ndandanda(85, 92, 78, 95, 88)
onetsa("Test data:", test_data)
ika avg_result = analyze_data(test_data)
onetsa("Returned average:", avg_result)
onetsa("")

