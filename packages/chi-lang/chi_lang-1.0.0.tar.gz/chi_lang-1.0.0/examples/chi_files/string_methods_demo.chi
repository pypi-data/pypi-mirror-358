# ===== 6. PRACTICAL STRING PROCESSING =====
onetsa("=== 6. PRACTICAL STRING PROCESSING ===")

# Process user data
ika user_data = ndandanda("  john doe  ", "JANE SMITH", "bob_johnson")
onetsa("Processing user names:")
bwereza name mu user_data:
    ika cleaned = name.chotsani_mimpata()
    ika formatted = cleaned.zingonozingono()
    ika words = formatted.gawani(" ")
    ika capitalized = ndandanda()
    
    bwereza word mu words:
        ngati kukula(word) wapambana 0:
            ika first_char = word.dulaini(0, 1).zikuluzikulu()
            ika rest = word.dulaini(1, kukula(word))
            ika proper_word = first_char + rest
            capitalized.onjezera(proper_word)
    
    ika final_name = " ".lumikizani(capitalized)
    onetsa("Original: '", name, "' -> Processed: '", final_name, "'")

onetsa("")

