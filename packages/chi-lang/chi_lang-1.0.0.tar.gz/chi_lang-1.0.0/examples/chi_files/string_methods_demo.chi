# ===== 1. CREATING STRINGS =====
onetsa("=== 1. CREATING STRINGS ===")
ika greeting = "Moni, dziko!"
ika number_string = mawu(42)
onetsa("String literal:", greeting)
onetsa("Number to string:", number_string)
onetsa("String length:", kukula(greeting))
