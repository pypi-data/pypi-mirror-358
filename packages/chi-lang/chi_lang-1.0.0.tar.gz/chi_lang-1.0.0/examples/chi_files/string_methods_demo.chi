# ===== 2. STRING MANIPULATION METHODS =====
onetsa("=== 2. STRING MANIPULATION METHODS ===")

# Test string with whitespace
ika test_string = "  Hello Chi Programming  "
onetsa("Original string:", "'", test_string, "'")

# Remove whitespace (chotsani_mimpata)
ika trimmed = test_string.chotsani_mimpata()
onetsa("After chotsani_mimpata():", "'", trimmed, "'")

# Split string (gawani)
ika sentence = "Chi is amazing programming language"
ika words = sentence.gawani(" ")
onetsa("Original:", sentence)
onetsa("Split by space:", words)

# Join strings (lumikizani)
ika word_list = ndandanda("Chi", "programming", "is", "fun")
ika joined = " ".lumikizani(word_list)
onetsa("Word list:", word_list)
onetsa("Joined with space:", joined)

# Replace text (sinthani)
ika original_text = "I love Python programming"
ika replaced = original_text.sinthani("Python", "Chi")
onetsa("Original:", original_text)
onetsa("After replace:", replaced)
onetsa("")

# ===== 3. CASE CONVERSION METHODS =====
onetsa("=== 3. CASE CONVERSION METHODS ===")
ika mixed_case = "Chi Programming Language"
onetsa("Original:", mixed_case)
onetsa("Upper case (zikuluzikulu):", mixed_case.zikuluzikulu())
onetsa("Lower case (zingonozingono):", mixed_case.zingonozingono())
onetsa("")

