# ===== Test 7: Recursive Function =====
onetsa("=== Test 7: Recursive Function ===")

panga countdown(n):
    onetsa("Countdown:", n)
    ngati n wapambana 1:
        countdown(n - 1)
    sizoona:
        onetsa("Finished!")

countdown(5)
onetsa("")

