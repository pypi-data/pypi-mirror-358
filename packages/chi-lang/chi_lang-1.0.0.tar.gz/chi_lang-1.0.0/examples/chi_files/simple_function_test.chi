panga display_stats(name, score):
    onetsa("Student Information:")
    onetsa("  Name:", name)
    onetsa("  Score:", score)
    ngati score wafananitsa 80:
        onetsa("  Grade: A")
    kapena_ngati score wafananitsa 70:
        onetsa("  Grade: B")
    sizoona:
        onetsa("  Grade: C")

display_stats("Alice", 85)
display_stats("Bob", 75)
