# ===== Test 5: Function with Logic =====
onetsa("=== Test 5: Function with Logic ===")

panga classify_number(num):
    ngati num wapambana 0:
        bweza "positive"
    kapena_ngati num wachepa 0:
        bweza "negative"
    sizoona:
        bweza "zero"

onetsa("10 is", classify_number(10))
onetsa("-5 is", classify_number(-5))
onetsa("0 is", classify_number(0))
onetsa("")

