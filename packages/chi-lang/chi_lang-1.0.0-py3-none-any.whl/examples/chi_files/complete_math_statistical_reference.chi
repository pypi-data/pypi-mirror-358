# Power and modulo functions
onetsa("1. mphamvu(base, exponent) - Power")
onetsa("   Example:", mphamvu(2, 3), "(2¬≥)")
onetsa("   Meaning: 'strength/power' in Chichewa")
onetsa("")

onetsa("2. chotsalira(dividend, divisor) - Modulo")
onetsa("   Example:", chotsalira(17, 5), "(17 mod 5)")
onetsa("   Meaning: 'remainder' in Chichewa")
onetsa("")

# Root and absolute value
onetsa("3. muzu(number) - Square Root")
onetsa("   Example:", muzu(36), "(‚àö36)")
onetsa("   Meaning: 'root' in Chichewa")
onetsa("")

onetsa("4. chopanda(number) - Absolute Value")
onetsa("   Example:", chopanda(-15), "(|-15|)")
onetsa("   Meaning: 'without sign' in Chichewa")
onetsa("")

# Rounding functions
onetsa("5. pansi(number) - Floor")
onetsa("   Example:", pansi(4.8), "(floor 4.8)")
onetsa("   Meaning: 'down/below' in Chichewa")
onetsa("")

onetsa("6. pamwamba(number) - Ceiling")
onetsa("   Example:", pamwamba(4.2), "(ceiling 4.2)")
onetsa("   Meaning: 'up/above' in Chichewa")
onetsa("")

onetsa("7. zungulira(number, digits) - Round")
onetsa("   Example:", zungulira(3.14159, 2), "(round to 2 places)")
onetsa("   Meaning: 'to go around' in Chichewa")
onetsa("")

onetsa("=== AGGREGATION FUNCTIONS ===")
