ika exam_scores = ndandanda(78, 85, 92, 78, 88, 95, 82, 90, 85, 88)
onetsa("Exam Scores:", exam_scores)
onetsa("")

onetsa("Descriptive Statistics:")
onetsa("  Count:", kukula(exam_scores))
onetsa("  Sum:", phatikiza(78, 85, 92, 78, 88, 95, 82, 90, 85, 88))
onetsa("  Average:", zungulira(pakatikati(78, 85, 92, 78, 88, 95, 82, 90, 85, 88), 1))
onetsa("  Median:", chapakati(exam_scores))
onetsa("  Mode:", yofala(exam_scores))
onetsa("  Range:", chachikulu(78, 85, 92, 78, 88, 95, 82, 90, 85, 88) - chachingono(78, 85, 92, 78, 88, 95, 82, 90, 85, 88))
onetsa("")

onetsa("Sorted Data:")
onetsa("  Low to High:", sanja(exam_scores, "koyamba"))
onetsa("  High to Low:", sanja(exam_scores, "komaliza"))
onetsa("")

