# Basic aggregations
onetsa("8. phatikiza(...args) - Sum")
onetsa("   Example:", phatikiza(10, 20, 30, 40), "(sum of values)")
onetsa("   Meaning: 'to add together' in Chichewa")
onetsa("")

onetsa("9. pakatikati(...args) - Average")
onetsa("   Example:", pakatikati(10, 20, 30, 40), "(mean of values)")
onetsa("   Meaning: 'in the middle' in Chichewa")
onetsa("")

onetsa("10. chachikulu(...args) - Maximum")
onetsa("    Example:", chachikulu(15, 25, 5, 35), "(largest value)")
onetsa("    Meaning: 'the biggest' in Chichewa")
onetsa("")

onetsa("11. chachingono(...args) - Minimum")
onetsa("    Example:", chachingono(15, 25, 5, 35), "(smallest value)")
onetsa("    Meaning: 'the smallest' in Chichewa")
onetsa("")

onetsa("=== STATISTICAL FUNCTIONS ===")
onetsa("")

# Sorting
onetsa("12. sanja(data, koyambila) - Sort")
ika demo_data = ndandanda(50, 10, 30, 20, 40)
onetsa("    Data:", demo_data)
onetsa("    Ascending:", sanja(demo_data, "koyamba"))
onetsa("    Descending:", sanja(demo_data, "komaliza"))
onetsa("    Meaning: 'to arrange/organize' in Chichewa")
onetsa("    Directions: 'koyamba' (from beginning), 'komaliza' (from end)")
onetsa("")

# Median
onetsa("13. chapakati(data) - Median")
ika median_data = ndandanda(1, 3, 5, 7, 9)
onetsa("    Odd data:", median_data, "‚Üí Median:", chapakati(median_data))
ika even_data = ndandanda(2, 4, 6, 8)
onetsa("    Even data:", even_data, "‚Üí Median:", chapakati(even_data))
onetsa("    Meaning: 'in the middle' in Chichewa")
onetsa("")

# Mode
onetsa("14. yofala(data) - Mode")
ika mode_data = ndandanda(1, 2, 2, 3, 2, 4)
onetsa("    Data:", mode_data, "‚Üí Mode:", yofala(mode_data))
ika multi_mode = ndandanda(1, 1, 2, 2, 3)
onetsa("    Multi-mode:", multi_mode, "‚Üí Modes:", yofala(multi_mode))
onetsa("    Meaning: 'most frequent' in Chichewa")
onetsa("")

onetsa("=== COMPLETE STATISTICAL ANALYSIS EXAMPLE ===")
